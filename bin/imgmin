#!/usr/local/bin/zsh

FILENAME="${1%.*}"
EXTENSION="${1##*.}"

EXT=$( echo $EXTENSION | tr '[:upper:]' '[:lower:]' )

if [[ "$EXT" == "png" ]]; then
  CMD="/usr/local/bin/pngquant"
  $CMD --speed 1 --ext .min.$EXTENSION $1
elif [[ "$EXT" == "svg" ]]; then
  CMD="/usr/local/bin/svgo"
  $CMD $1 > $FILENAME.min.$EXTENSION
else
  CMD="/usr/local/bin/imagemin"
  $CMD $1 > $FILENAME.min.$EXTENSION
fi
